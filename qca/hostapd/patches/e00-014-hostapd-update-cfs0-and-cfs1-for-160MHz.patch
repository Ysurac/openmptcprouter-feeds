 	if (hapd->iconf->vht_oper_chwidth == 2) {
 		/*
 		 * Convert 160 MHz channel width to new style as interop
@@ -109,6 +123,10 @@ u8 * hostapd_eid_vht_operation(struct ho
 			oper->vht_op_info_chan_center_freq_seg0_idx -= 8;
 		else
 			oper->vht_op_info_chan_center_freq_seg0_idx += 8;
+
